# ===========================================
# DuoNanGuo - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Database (Required)
# -------------------------------------------
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/duo-nan-guo?retryWrites=true&w=majority"

# -------------------------------------------
# NextAuth (Required)
# -------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
# Your production URL (update after deploying to Vercel)
NEXTAUTH_URL="http://localhost:3000"

# -------------------------------------------
# OAuth Providers (Required for login)
# -------------------------------------------
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# -------------------------------------------
# Pusher (Required for real-time features)
# -------------------------------------------
# Get from https://dashboard.pusher.com/
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="ap3"

# Client-side (must match server-side values)
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
NEXT_PUBLIC_PUSHER_CLUSTER="ap3"

# -------------------------------------------
# AI API Keys (Required for bot battles)
# -------------------------------------------
# Google Gemini - https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key"

# Groq - https://console.groq.com/keys
GROQ_API_KEY="your-groq-api-key"

# -------------------------------------------
# Optional Settings
# -------------------------------------------
# Admin password for /admin access
NEXT_PUBLIC_ADMIN_PASSWORD="your-admin-password"

# Vercel Cron Job secret (for cleanup task)
CRON_SECRET="your-cron-secret"

# Gemini API rate limit (requests per minute, default: 30)
# GEMINI_RPM="30"
